<header>
  <nav>
    <ul class="nav nav-tabs nav-justified">
      <li><a href="/">Home</a></li>
      <li><a href="/songs">Songs</a></li>
      <% if cookies[:email] %>
        <li><a>Currently logged in as <%=cookies[:email] %></a></li>
        <li><a href="/logout">Logout</a></li>
      <% else %>
        <li><a href="/login">Login or Signup</a></li>
      <% end %>
    </ul>
  </nav>
</header>

<% if @song.errors.any? %>
  <div class="alert alert-danger">
    <strong>Please fix these issues with your song:</strong>
    <ul>
      <% @song.errors.full_messages.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </p>
  </div>
<% end %>

<form method="post" action="/add_song">
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @song.author %>">
  </div>
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @song.title %>">
  </div>
  <div>
    <label>Url:</label>
    <input type="text" name="url" value="<%=@song.url%>">
  </div>
  <div>
    <input type="submit" class="btn btn-primary" value="Submit">
  </div>
</form>

